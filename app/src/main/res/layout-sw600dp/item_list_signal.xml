<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mMainViewItemSignal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:id="@+id/mLineDateServices"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/mRelativeItemSignal"
        android:layout_alignTop="@+id/mRelativeItemSignal"
        android:layout_marginLeft="25dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/mDateItemSignal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_date_text_view"
        android:gravity="center_vertical"
        android:text="05 May 2018"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/mRelativeItemSignal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/mDateItemSignal"
        android:padding="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/mCardItemSignal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="5dp"
            app:contentPadding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mAddressGoogleSignal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="Direccion Google"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/mStreet1Signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:minLines="1"
                    android:padding="2dp"
                    android:text="Street 1"
                    android:textAlignment="viewStart"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mStreet2Signal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:minLines="1"
                    android:padding="2dp"
                    android:text="Street 2"
                    android:textSize="16sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>